[flake8]
#ignore =  C901,
#          E203, E231, E262, E265, E266, E401, E402, E501, E711, E713, E722, E731,
#          # imported but unused
#	   F401,
#          F523, F524, F811, F841,
#	   W503, W605
ignore =
#         is too complex
          C901,
#	  whitespace before ':'
          E203,
#	  module level import not at top of file
	  E402,
#         line too long (> 79 characters)
	  E501,
	  E711, E713, E722, E731,
#	  imported but unused
          F401,
#	  line break before binary operator
	  W503

exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist
max-complexity = 10
max-line-length = 79
