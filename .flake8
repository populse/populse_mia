[flake8]
ignore =
#         is too complex
          C901,
#	  whitespace before ':'
          E203,
#	  module level import not at top of file
	  E402,
#         line too long (> 79 characters)
	  E501,
#	  imported but unused
          F401,
#	  line break before binary operator
	  W503
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist
max-complexity = 10
max-line-length = 79
